<MainPage>:
    canvas.before:
        Color:
            rgba: (1, 1, 1, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        cols:1
        
        TextInput:
            hint_text:"Enter a word"
            id: word
            multiline:False
            size_hint: 1, None
        Button:
            text: "Translate"
            on_press: root.word_translate(root.ids.word.text)
            size_hint: 1, None


        GridLayout:
            cols:1
            id:main
            Label:
                id: entered_word
                text: ""
                color: 0,0,0,1
                font_size: '30sp'
            ScrollView:
                GridLayout:
                    cols:1
                    size_hint_y:None

                    id: defs
                    height:self.minimum_height

<RootWidget>:
    MainPage:
        name: "main_page"
